@model IEnumerable<Entities.Models.Role>

@{
    ViewData["Title"] = "Role And Permission Page";
    @if (TempData["Message"] != null)
    {
        @TempData["Message"]
    }
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Page</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/media.css">
    <link rel='stylesheet' href='https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body class="bg-body-tertiary">

    <!-- Overlay for small screens -->
    <div class="overlay" id="overlay"></div>


    <div class="content mt-3" id="content">
        <!-- Main content goes here -->
        <div class="row d-flex mb-2 mt-5">

            <div class="col-md-8">
               
                    <table id="table" class="table align-middle  table-hover bg-white ms-2 shadow-lg rounded">
                        <thead class="bg-light">
                            <tr>
                                <th>Role</th>
                                <th class="text-end pe-5">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <p class="fw-normal mb-1">@item.RoleName</p>
                                    </td>
                                    <td>
                                        <a class="text-black d-flex justify-content-end pe-5" asp-area=""
                                            asp-controller="RoleAndPermission" asp-action="Permission"
                                            asp-route-id="@item.RoleId">
                                            <i class="fa-solid fa-marker"></i>
                                        </a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
             
            </div>
        </div>


    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <!-- jQuery -->
    <script src='https://code.jquery.com/jquery-3.7.0.js'></script>

    <!-- JS for sidebar toggle -->

    <script src="~/js/userPage.js"></script>
</body>

</html>