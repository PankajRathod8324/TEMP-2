@{
    Layout = "_Layout1";
    ViewData["Title"] = "Access Denied Page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 - Page Not Found</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #d9edf7; /* Light Blue Background */
            text-align: center;
        }
        .container {
            height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
        h1 {
            font-size: 100px;
            font-weight: bold;
            color: #007bff; /* Bootstrap Primary Blue */
        }
        p {
            color: #333;
            font-size: 20px;
        }
        .logo {
            width: 100px; /* Adjust logo size */
            margin-bottom: 10px;
        }
    </style>
</head>
<body>

    <div class="container">
        <img src="~/assest/logos/pizzashop_logo.png" alt="Pizzashop Logo" class="logo">
        <h1>404</h1>
        <h3>Page Not Found</h3>
        <p>Oops, the page you're looking for isn't here.</p>
    </div>

</body>
</html>