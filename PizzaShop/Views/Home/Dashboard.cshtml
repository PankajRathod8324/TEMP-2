@{
    ViewData["Title"] = "Dashboard Page";
    @if (TempData["Message"] != null)
    {
        @TempData["Message"]
    }
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Page</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/media.css">
    <link rel='stylesheet' href='https://cdn.datatables.net/1.13.5/css/dataTables.bootstrap5.min.css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css"
        integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>


    <style>
        .card {
            transition: 0.3s;
        }

        .card:hover {
            transform: scale(1.05);
        }

        canvas {
            max-height: 300px;
        }
    </style>
</head>

<body class="bg-body-tertiary">

    <!-- Overlay for small screens -->
    <div class="overlay" id="overlay"></div>

    <div class="content mt-2" id="content">
        <!-- Main content goes here -->
        <div class="col ms-3">
            <h1 class="webybtn">Dashboard </h1>
        </div>


        <div class="container mt-4">
            <!-- First Row: Summary Cards -->
            <!-- Summary Cards -->
            <div class="row g-4 mt-3">
                <div class="col-md-3">
                    <div class="card shadow text-center p-3">
                        <i class="fa fa-dollar-sign fa-2x text-primary"></i>
                        <h5>Total Sales</h5>
                        <p class="fs-4">$50,000</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow text-center p-3">
                        <i class="fa fa-shopping-cart fa-2x text-success"></i>
                        <h5>Total Orders</h5>
                        <p class="fs-4">1,250</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow text-center p-3">
                        <i class="fa fa-chart-line fa-2x text-warning"></i>
                        <h5>Avg. Order Value</h5>
                        <p class="fs-4">$40</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card shadow text-center p-3">
                        <i class="fa fa-clock fa-2x text-danger"></i>
                        <h5>Avg. Waiting Time</h5>
                        <p class="fs-4">5 mins</p>
                    </div>
                </div>
            </div>

            <!-- Charts Section -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card shadow p-3">
                        <h5 class="text-center">Revenue</h5>
                        <canvas id="revenueChart"></canvas>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow p-3">
                        <h5 class="text-center">Customer Growth</h5>
                        <canvas id="customerGrowthChart"></canvas>
                    </div>
                </div>
            </div>
            <!-- Last Row: Additional Stats -->
            <div class="row mt-4">
                <!-- Top Selling Items -->
                <div class="col-md-3">
                    <div class="card shadow p-3 text-start">
                        <h5>Top Selling Item</h5>
                        <div class="d-flex align-items-center justify-content-start text-start gap-2">
                            <p class="fw-bold mt-3">#1</p>
                            <img src="~/assest/dining-menu.png" alt="" style="width: 45px; height: 45px"
                                class="rounded-circle" />
                            <div class="text-start">
                                <p class="fw-bold mb-0">Grilled Burger</p>
                                <div class="d-flex align-items-center gap-1">
                                    <i class="fa-solid fa-bell-concierge text-muted"></i>
                                    <p class="text-muted mb-0 small">1 order</p>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-start text-start gap-2">
                            <p class="fw-bold mt-3">#2</p>
                            <img src="~/assest/dining-menu.png" alt="" style="width: 45px; height: 45px"
                                class="rounded-circle" />
                            <div class="text-start">
                                <p class="fw-bold mb-0">Margherita</p>
                                <div class="d-flex align-items-center gap-1">
                                    <i class="fa-solid fa-bell-concierge text-muted"></i>
                                    <p class="text-muted mb-0 small">1 order</p>
                                </div>
                            </div>
                        </div>




                    </div>
                </div>

                <!-- Least Selling Items -->
                <div class="col-md-3">
                    <div class="card shadow p-3 text-start">
                        <h5>Least Selling Item</h5>
                        <div class="d-flex align-items-center justify-content-start text-start gap-2">
                            <p class="fw-bold mt-3">#1</p>
                            <img src="~/assest/dining-menu.png" alt="" style="width: 45px; height: 45px"
                                class="rounded-circle" />
                            <div class="text-start">
                                <p class="fw-bold mb-0">Grilled Burger</p>
                                <div class="d-flex align-items-center gap-1">
                                    <i class="fa-solid fa-bell-concierge text-muted"></i>
                                    <p class="text-muted mb-0 small">1 order</p>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex align-items-center justify-content-start text-start gap-2">
                            <p class="fw-bold mt-3">#2</p>
                            <img src="~/assest/dining-menu.png" alt="" style="width: 45px; height: 45px"
                                class="rounded-circle" />
                            <div class="text-start">
                                <p class="fw-bold mb-0">Margherita</p>
                                <div class="d-flex align-items-center gap-1">
                                    <i class="fa-solid fa-bell-concierge text-muted"></i>
                                    <p class="text-muted mb-0 small">1 order</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Waiting List Count -->
                <div class="col-md-3">
                    <div class="card shadow p-3 text-center">
                        <h5>Waiting List Count</h5>
                        <i class="fa fa-clock fa-2x text-warning"></i>
                        <p class="fs-4 mt-2">8 Customers</p>
                    </div>
                </div>

                <!-- New Customer Count -->
                <div class="col-md-3">
                    <div class="card shadow p-3 text-center">
                        <h5>New Customers</h5>
                        <i class="fa fa-user-plus fa-2x text-success"></i>
                        <p class="fs-4 mt-2">23 New</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            if (document.getElementById('revenueChart')) {
                const revenueCtx = document.getElementById('revenueChart').getContext('2d');
                new Chart(revenueCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                        datasets: [{
                            label: 'Revenue ($)',
                            data: [12000, 15000, 17000, 20000, 25000, 30000],
                            backgroundColor: 'rgba(54, 162, 235, 0.5)',
                            borderColor: 'rgba(54, 162, 235, 1)',
                            borderWidth: 1
                        }]
                    }
                });
            }

            if (document.getElementById('customerGrowthChart')) {
                const customerCtx = document.getElementById('customerGrowthChart').getContext('2d');
                new Chart(customerCtx, {
                    type: 'line',
                    data: {
                        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                        datasets: [{
                            label: 'Customers',
                            data: [200, 400, 600, 800, 1000, 1200],
                            backgroundColor: 'rgba(255, 99, 132, 0.5)',
                            borderColor: 'rgba(255, 99, 132, 1)',
                            borderWidth: 2
                        }]
                    }
                });
            }
        });
    </script>
</body>

</html>