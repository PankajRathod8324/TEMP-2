@model Entities.ViewModel.ForgotPasswordVM

@{
    Layout = "_Layout1";
    @* ViewData["Title"] = "Forgot Password Page"; *@
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pizza Shop</title>
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/media.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="d-flex align-items-center justify-content-center vh-100">
        <div class="row h-100 w-100">
            <!-- Left Image Section -->
            <div class="col-6  p-0 overflow-hidden">
                <img src="~/assest/dominos_background.jpg" class="img-fluid h-100 w-100" style="object-fit: cover;"
                    alt="Background Image">
            </div>

            <!-- Form Section -->
            <div
                class="col-lg-6 col-md-12 forgotBackground d-flex flex-column justify-content-center align-items-center px-3">



                <div class="col-lg-9 col-md-10 col-sm-12 p-5">
                    <div class="d-flex align-items-center justify-content-center mb-4">
                        <img class="me-2" src="~/assest/logos/pizzashop_logo.png" alt="Pizzashop Logo"
                            style="width: 60px;">

                        <div class="fs-3 fw-bold" style="color: rgba(0, 102, 167, 1);">PIZZASHOP</div>
                    </div>
                    @* @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                    } *@
                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-3 text-start fs-4 fw-bold">Forgot Password @Model.Email</div>
                        <p class="text-start ">Enter your email and we'll send you a link to reset your password</p>

                        <div class="input-group mt-3 position-relative">
                            <input id="email" asp-for="Email" class="form-control form-control-lg" type="text"
                                placeholder="Email*" aria-label="Email">
                            <span class="position-absolute top-50 end-0 translate-middle-y me-3">
                                <i id="emailicon" class="fa-solid fa-user"></i>
                            </span>
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn  btn-lg text-white text-center"
                                style="background-color: rgba(0, 102, 167, 1); border-color: rgba(0, 102, 167, 1);">
                                Send
                            </button>
                        </div>

                        <div class=" text-center mt-3">
                                <a asp-area="" asp-controller="Authentication" asp-action="Loginpage"
                                    style="text-decoration: none; color: rgba(0, 102, 167, 1);">Back to Login</a>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="~/js/loginPage.js"></script>
</body>

</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}