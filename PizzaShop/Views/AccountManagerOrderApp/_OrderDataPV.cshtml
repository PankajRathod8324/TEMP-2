@model List<Entities.ViewModel.MenuCategoryVM>

@{
    decimal sum = 0;
}

<div class="ItemDataCard d-flex justify-content-between align-items-center mt-3 webyborderitemdiv p-1 ms-3 mb-3">
    <div class="col-md-6 col-sm-3 ps-1">

        <div class="d-flex mb-2">
            <i class="bi bi-chevron-down"></i>
            <span class="fw-bold ms-1 fs-6  text-black">@Model.FirstOrDefault().ItemName</span>
        </div>
        @if (Model.Any())
        {

            @foreach (var mod in Model?.FirstOrDefault()?.MenuItemModifier)
            {
                sum += (decimal)mod.ModifierRate;
                <div>
                    <ul class="mb-0">
                        <li>
                            <div class="d-flex gap-5 ">
                                <span class="fs-6 text-black">@mod.ModifierName</span>
                                <span class="fs-6 text-black ">@mod.ModifierRate</span>

                            </div>
                        </li>
                    </ul>
                </div>
            }
        }

    </div>
    <div class="d-flex justify-content-between col-md-6 gap-4">
        <div>
            <div class="d-flex flex-row webyborderitemdiv">
                <div class="btn dec">-</div>
                <div class="d-flex align-items-center justify-content-center px-2 inputquantity">1</div>
                <div class="btn inc">+</div>
            </div>
        </div>
        <div>
            <div>
                <span>₹</span>
                <span class="fs-5 itemrate" value="@Model.FirstOrDefault().Rate">@Model.FirstOrDefault().Rate</span>
            </div>
             <div>
                <span>₹</span>
                <span class="fs-5 modifierrate" value="@(sum)" data-amt="@sum">@(sum)</span>
            </div>
        </div>
        <div>
            <a class="btn deleteitembtn">
                <i class="bi bi-trash"></i>
            </a>
        </div>
    </div>
</div>