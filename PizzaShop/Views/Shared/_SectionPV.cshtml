    </div>

    <div class="modal" id="newtableModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content">
                <form id="AddTable">
                    <div class="modal-header">
                        <h5 class="modal-title text-secondary" id="exampleModalLabel">Add New Table</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">


                        <!-- Category Dropdown -->
                        <div class="row d-flex justify-space-between">
                            <div class="row">
                                <div class="col">
                                    <div class="form-floating mb-3">
                                        <input type="text" asp-for="TableName" class="form-control" id="floatingInput">
                                        <label for="floatingInput" asp-for="TableName">Name*</label>
                                        <span asp-validation-for="TableName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-floating">
                                        <select class="form-select" asp-for="SectionId" asp-items="ViewBag.Sections"
                                            id="floatingSelect" aria-label="Floating label select example">
                                            <option selected>Select a Section</option>
                                        </select>
                                        <label for="floatingSelect">Section*</label>
                                        <span asp-validation-for="SectionId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="col">
                                    <div class="form-floating mb-3">
                                        <input type="text" asp-for="Capacity" class="form-control" id="floatingInput">
                                        <label for="floatingInput" asp-for="Capacity">Capacity*</label>
                                        <span asp-validation-for="Capacity" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="form-floating"> <select class="form-select" asp-for="StatusId"
                                            asp-items="ViewBag.Statuses" id="floatingSelect"
                                            aria-label="Floating label select example">
                                            <option selected>Select a status</option>
                                        </select>
                                        <label for="floatingSelect">Status*</label>
                                        <span asp-validation-for="StatusId" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </form>
            </div>

        </div>
    </div>



    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/TableAndSection/MenuTable',  // Ensure this route matches your controller
                type: 'GET',
                data: {
                    sectionId: selectedSectionId,

                },
                success: function (data) {
                    $("#menutablesContainer").html(data);  // Update the menu items container
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching items:', error);
                }
            });
            var selectedSectionId = null;
            console.log(selectedSectionId);

            $(".edit-btn").click(function () {
                var id = $(this).data("id");
                var name = $(this).data("name");
                var Description = $(this).data("description")

                $("#SectionId").val(id);
                $("#SectionName").val(name);
                $("#SectionDecription").val(Description);
                $("#Modal").modal("show");
            });
            $("#pageSizeDropdown").change(function () {
                loadMenuTables(1); // Reset to page 1 when changing page size
            });

            $("#searchInput").keyup(function () {
                loadMenuTables(1); // Reset to page 1 on search
            });

            // Handle Pagination
            $(document).on("click", ".pagination-btn", function (e) {
                e.preventDefault();
                var page = $(this).data("page"); // Get page number from button
                loadMenuTables(page);
            });

            $(".hoverDiv").click(function () {
                $(".hoverDiv").removeClass("active");
                $(this).addClass("active");
                selectedSectionId = $(this).data("id");
                var sectionId = selectedSectionId;

                loadMenuTables();
            });
            function loadMenuTables(page = 1) {
                var search = $("#searchInput").val();
                @* var sortOrder = $("#sortOrder").val(); *@
                var pageSize = $("#pageSizeDropdown").val();

                console.log("Section:", selectedSectionId, "Page:", page, "PageSize:", pageSize);

                $.ajax({
                    url: '/TableAndSection/MenuTable',  // Ensure this route matches your controller
                    type: 'GET',
                    data: {
                        sectionId: selectedSectionId,
                        search: search,
                        page: page,
                        pageSize: pageSize
                    },
                    success: function (data) {
                        $("#menutablesContainer").html(data);  // Update the menu items container
                    },
                    error: function (xhr, status, error) {
                        console.error('Error fetching items:', error);
                    }
                });
            }
        });

        $("#AddTable").submit(function (e) {
            e.preventDefault();
            console.log("Submitting AddTable form");

            // Serialize form fields
            var formData = $(this).serializeArray();
            var formDataobj = {};

            // Convert serialized array into an object
            $.each(formData, function (index, field) {
                formDataobj[field.name] = field.value;
            });


            var submissionData = JSON.stringify(formDataobj); // Final JSON string

            console.log("Sending data:", submissionData);

            $.ajax({
                url: '/TableAndSection/AddTable',
                type: 'POST',
                contentType: "application/json",
                data: submissionData,
                success: function (response) {
                    alert("Table Added Successfully!");
                },
                error: function (xhr, status, error) {
                    console.error('Error:', xhr.responseText); // Log detailed error
                }
            });
        });



    </script>
