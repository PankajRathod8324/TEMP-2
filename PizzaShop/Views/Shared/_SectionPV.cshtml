                </div>
                <div class="modal-footer d-flex align-items-center justify-content-center">
                    <button type="button" class="btn btn-primary deletebtn">Yes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal " id="EditSection" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Edit Section</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <form id="editSectionForm" method="POST" asp-action="EditSection" asp-controller="TableAndSection">
                    <input type="hidden" asp-for="@Model.SectionId" id="SectionId" name="SectionId" />

                    <div class="modal-body">

                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" asp-for="@Model.SectionName" id="SectionName"
                                name="SectionName">
                            <label for="SectionName">Name*</label>
                            <span asp-validation-for="@Model.SectionName" class="text-danger"></span>
                        </div>

                        <div class="form-outline mb-4">
                            <textarea class="form-control" id="SectionDecription" name="SectionDecription"
                                asp-for="@Model.SectionDecription" rows="4"></textarea>
                            <label for="SectionDecription"></label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

    <div class="modal " id="AddSection" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
